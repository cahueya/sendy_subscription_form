      <unsigned/>
      <key/>
    </field>
    <field name="title" type="text" comment="Title">
    </field>
    <field name="description" type="text" comment="Description">
    </field>
    <field name="listURL" type="text" comment="Destination page: external URL">
    </field>
    <field name="listID" type="text" comment="List ID to subscribe to">
    </field>
    <field name="addGDPR" type="boolean" comment="Offer GDPR compliant subscription">
    </field>
    <field name="privacyURL" type="text" comment="URL to your Privacy Terms">
    </field>
  </table>

</schema>
